{% extends 'base.html.twig' %}

{% block title %}Liste des Produits {% endblock %}

{% block bouton%}
    <a class="btn btn-primary text-white" href="{{ path('app_produit_new') }}">Ajouter</a>
{% endblock %}
{% block breadcrumb%}
      Liste des produits
{% endblock %}
{% block body %}
<div class="card mt-3">
    <div class="card-body">
        <table class="table">
            <thead>
            <tr>

                <th>Nom Produit</th>
                <th>Prix</th>
                <th>Quantité Stock</th>
                <th>Date Ajout</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for produit in produits %}
                <tr>
                    <td>{{ produit.nomProduit }}</td>
                    <td>{{ produit.prix }}</td>
                    <td>{{ produit.quantiteStock }}</td>
                    <td>{{ produit.dateAjout ? produit.dateAjout|date('Y-m-d') : '' }}</td>
                    <td>
                        <a href="{{ path('app_produit_show', {'id': produit.id}) }}">Voir</a>
                        <a href="{{ path('app_produit_edit', {'id': produit.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Aucun enregistrement trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

</div>




{% endblock %}
